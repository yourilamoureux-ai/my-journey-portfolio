---
import Heading from "../ui/Heading.astro";
import Button from "../ui/Button.astro";
import { useTranslations } from '@/i18n/utils.ts';

// Detect locale (use Astroâ€™s i18n built-in)
const locale = Astro.currentLocale || 'en';
const t = useTranslations(locale);

// Email still comes from staticData (kept separate)
import { getCollection } from "astro:content";
const [staticData] = await getCollection("staticData");
const { email, contactSectionButtonIcon } = staticData.data;
---

<section>
  <div class="w-full border-b bg-linear-to-b from-mint-100 to-transparent dark:from-mint-800 dark:border-mint-950 border-mint-100">
    <div class="mx-auto max-w-5xl px-8 py-24 max-sm:py-12">
      <div class="flex items-center justify-between max-sm:flex-col max-sm:gap-8 max-sm:text-center">
        <div class="max-w-lg">
          <Heading
            text={t("contact.title")}
            textGradient={t("contact.subtitle")}
            level={2}
          />
        </div>
        <div class="transition-all duration-500 hover:scale-125">
          <Button
            variant="big"
            link={`mailto:${email}`}
            text={t("contact.button")}
            iconName={contactSectionButtonIcon}
          />
        </div>
      </div>
    </div>
  </div>
</section>
