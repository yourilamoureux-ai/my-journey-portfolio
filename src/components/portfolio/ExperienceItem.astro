---
// Define the properties the component will accept
interface Props {
  title: string;
  description: string;
  date: string;
  alignment?: 'left' | 'right'; // Our new "switch"
}

// Get the props, with 'left' as the default alignment
const { title, description, date, alignment = 'left' } = Astro.props;
---

<div class="flex justify-center relative mb-12">
  <div class="w-1/2 pr-8 text-right">
    {alignment === 'left' && (
      <div class="fade-in-left">
        <h3 class="text-xl font-bold text-mint-400">{title}</h3>
        <time class="text-sm text-zinc-600/80 dark:text-white/80">{date}</time>
        <p class="mt-2 text-zinc-400 text-base">{description}</p>
      </div>
    )}
  </div>

  <div class="w-12 flex-shrink-0 flex justify-center">
    <div class="w-px h-full bg-black/20 dark:bg-white/15"></div>
    <div class="absolute top-0 text-5xl text-mint-400 rounded-full drop-shadow-[0px_0px_8px_rgba(0,255,94,1)] z-10 -ml-1 mt-[-4px]">&bull;</div>
  </div>

  <div class="w-1/2 pl-8 text-left">
    {alignment === 'right' && (
      <div class="fade-in-right">
        <h3 class="text-xl font-bold text-mint-400">{title}</h3>
        <time class="text-sm text-zinc-600/80 dark:text-white/80">{date}</time>
        <p class="mt-2 text-zinc-400 text-base">{description}</p>
      </div>
    )}
  </div>
</div>